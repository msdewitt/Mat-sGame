<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Mat's Game</name>
    <description>
        A tabletop game that involves a series of events and player reactions.
    </description>
    <author email="msdewittdev@gmail.com" href="https://github.com/msdewitt">
        Matheu DeWitt
    </author>
    <content src="index.html" /> <!-- The app starting page. Default value is index.html. -->
    <plugin name="cordova-plugin-whitelist" spec="1" /> <!-- Specifies details about what pluggin to restore during a prepare. Automatically added to config.xml. -->
    <access origin="*" /> <!-- The servers this app is allowed access with. The default value is all servers. -->
    <allow-intent href="http://*/*" /> <!-- allow-intent: defines which urls the app is allowed to ask the system to open. By default no external URLs are allowed. -->
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="ios" spec="^4.5.4" /> <!-- engine: specifies details about what platform to restore during a prepare. -->
    <engine name="android" spec="^7.0.0" />
</widget>
